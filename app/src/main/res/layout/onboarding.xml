<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/backscreen"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="-5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/img_onboarding" />

        <TextView
            android:id="@+id/__p__milions_of_songs__free_on_VOVMusic"
            android:layout_width="286dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginStart="58dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="73dp"
            android:fontFamily="Arial"
            android:gravity="center"
            android:text="@string/Onboarding_1"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_sign"
        android:layout_width="298dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="617dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/button_sign"
        android:clickable="true"
        android:text="Sign Up Free"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="528dp" />

    <TextView
        android:id="@+id/log_in"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="721dp"
        android:layout_marginEnd="175dp"
        android:clickable="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="5sp"
        android:text="Log In"
        android:textColor="@color/white"
        android:translationY="-2.28sp" />
</RelativeLayout>