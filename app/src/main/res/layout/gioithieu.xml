<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffe9ab">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/gioithieu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="pin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_thongtinungdung"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp">
            <!--Tên ứng dụng COOkINGWITH3CAN-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="CookingWith3CAN5"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="Nấu ăn cùng nhóm 3CÂN5"
                android:textSize="10sp" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Giới thiệu về ứng dụng-->
                    <TextView
                        android:id="@+id/gtud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Giới thiệu về ứng dụng"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/gioithieu" />
                    <!--Tính năng nổi bật-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tính năng nổi bật"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!--        tìm kiếm món ăn-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_tinhnang1" />

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:background="#54BDFD" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/bg_tinhnang"
                            android:backgroundTint="#65c3fd"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1. Tìm kiếm món ăn"
                                android:textColor="#dcf1fe" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:textColor="#dcf1fe"
                                android:text="Giúp bạn tìm kiếm dễ dàng với việc lọc dữ liệu theo tên món ăn một cách nhanh chóng." />
                        </LinearLayout>
                    </LinearLayout>

                    <!--        Xem danh sách món ăn-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_tinhnang2" />

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:background="#17c257" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/bg_tinhnang"
                            android:backgroundTint="#30db70"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2. Xem danh sách món ăn"
                                android:textColor="#d1f7df" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:textColor="#d1f7df"
                                android:text="Chế độ xem bắt mắt với các món ăn được chọn lọc theo loại món và theo chế độ ăn. " />
                        </LinearLayout>
                    </LinearLayout>
                    <!--        lưu công thức món ăn-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_menu" />

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:background="#D08614" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/bg_tinhnang"
                            android:backgroundTint="#d4922b"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3. Lưu công thức nấu ăn vào thực đơn"
                                android:textColor="#faf2e7" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:textColor="#faf2e7"
                                android:text="Nếu bạn quên các món ăn bạn đã thêm vào thực đơn, chúng tôi sẽ nhắc nhở cho bạn." />
                        </LinearLayout>
                    </LinearLayout>
                    <!--        lưu vào món ăn yêu thích-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_heart" />

                        <TextView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:background="#fd5327" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@drawable/bg_tinhnang"
                            android:backgroundTint="#f36e4d"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4. Lưu món ăn yêu thích"
                                android:textColor="#f8ded7" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:textColor="#f8ded7"
                                android:text="Giúp bạn lưu trữ vào danh mục các món ăn yêu thích để có thể tiện xem lại dễ dàng." />
                        </LinearLayout>
                    </LinearLayout>
                    <!--GTCT-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Lời nhận xét về ứng dụng"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/bg_corner_dnhap">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_song3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="Hà Phi Vũ"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_rating" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="5dp"
                                    android:text="Ứng dụng rất hữu ích, cảm ơn nhà sản suất đã ra sản phẩm tuyệt vời như vậy." />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/bg_corner_dnhap">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_song2" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="Huỳnh Thị Kiều Oanh"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_rating" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="5dp"
                                    android:text="Ứng dụng hay, dành cho những ai niềm đam mê nấu nướng mãnh liệt như tôi." />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/bg_corner_dnhap">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img_song1" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="Lâm Thiều Vỹ"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:src="@drawable/icon_rating" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:padding="5dp"
                                    android:text="Ứng dụng giúp tôi biết nấu thêm được nhiều món ăn ngon hơn cho gia đình." />
                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:text="***Chúng tôi chúc bạn tận hưởng những phút giây ăn ngon miệng bên gia đình thân yêu!" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:src="@drawable/img_message" />
    </RelativeLayout>
</LinearLayout>