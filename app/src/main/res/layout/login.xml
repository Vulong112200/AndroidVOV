<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/backscreen"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="-5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@id/login_text"
        >

        <ImageView
            android:id="@+id/rectangle_16"
            android:layout_width="415dp"
            android:layout_height="570dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:contentDescription="rectangle_16"
            android:src="@drawable/img_login" />


        <ImageView
            android:id="@+id/back"
            android:layout_width="22.32dp"
            android:layout_height="21.83dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="368dp"
            android:contentDescription="vector"
            android:src="@drawable/vector" />

        <TextView
            android:id="@+id/__p__sign_in"
            android:layout_width="171dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="387dp"
            android:fontFamily="Arial"
            android:text="@string/SignIn"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/__p__welcome_back_to_tunify__it_s_time_to_listen_to_the_music_you_want_and_enjoy_the_music_"
            android:layout_width="345dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="442dp"
            android:fontFamily="Arial"
            android:text="@string/Signin_1"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_text"
        android:layout_width="411dp"
        android:layout_height="341dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="528dp"
        android:background="@drawable/duongvien">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_corner_dnhap"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/black"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dnhap_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:hint="Email:"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <!--password-->
        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/layout_username"
            android:background="@drawable/bg_corner_dnhap"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/black"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dnhap_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:hint="Password:"
                android:inputType="textPassword"
                android:textColorHint="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_forgotpass"
            android:layout_width="148dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="243dp"
            android:layout_marginTop="157dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Forgot your password?"
            android:textAppearance="@style/input"
            android:translationY="-2.28sp" />

        <Button
            android:id="@+id/button_sign"
            android:layout_width="298dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="57dp"
            android:background="@drawable/button_sign"
            android:clickable="true"
            android:text="Sign In"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="528dp" />

        <TextView
            android:id="@+id/you_have_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="230dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Donâ€™t have account?"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="230dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Sign Up"
            android:textAppearance="@style/input" />
    </RelativeLayout>
</RelativeLayout>
